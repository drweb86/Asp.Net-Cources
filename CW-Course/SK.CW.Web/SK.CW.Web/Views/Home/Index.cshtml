@model IEnumerable<SK.CW.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/IndexPage.js"></script>
<p>
    @Html.ActionLink("Добавить нового пользователя", "Create")
</p>

<h2>Пользователи</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details_UID)
        </th>
        <th>Удалить</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            <a details-uid="@item.Details_UID" class="showDetails">Детали</a>
        </td>
        <td>
            <a user-uid="@item.User_UID" class="deleteUser">Удалить</a>
        </td>
    </tr>
}

</table>

<div id="SelectedUserDetailsView" class="JQueryResultView">
    <h2>Информация о выбранном пользователе</h2>
    <p id="SelectedUserInformation"></p>
</div>